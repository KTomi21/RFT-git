<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="300.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.szamologep.LoginController">
    <children>
        <Text layoutX="100.0" layoutY="50.0" text="Login" fontSmoothingType="GRAY">
            <font>
                <Font name="Arial" size="24.0" />
            </font>
        </Text>
        <TextField fx:id="usernameField" layoutX="100.0" layoutY="100.0" promptText="Username" />
        <PasswordField fx:id="passwordField" layoutX="100.0" layoutY="150.0" promptText="Password" />
        <Button layoutX="150.0" layoutY="200.0" mnemonicParsing="false" text="Login" onAction="#onLoginClicked" />
    </children>

</AnchorPane>
